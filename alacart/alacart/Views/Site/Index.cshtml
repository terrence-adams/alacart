@model List<Restaurant>



<h1>Restaurants on Site</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
    </tr>

    @foreach (var restaurant in Model)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Description</td>
            <td><a asp-controller="site" asp-action="details" asp-route-id="@restaurant.ID">Details</a></td>
        </tr>

    }

    @if (Model.Count == 0)
    {
        <tr colspan="2">
            <td>There are no restaurants on site today. Sorry!</td>
        </tr>

    }


</table>


